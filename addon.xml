<addon id="plugin.video.streamhive"
       name="StreamHive"
       version="2.0.0"
       provider-name="StreamHive">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py"/>
    <extension point="xbmc.addon.metadata">
        <summary>StreamHive – Deutscher Streaming-Hub</summary>
        <description>Alle Genres: Action, Komödie, Horror, Liebesfilme, Bollywood, Kriegsfilme, Animation, Slasher, Serien – nur deutschsprachige Streams</description>
        <platform>all</platform>
        <language>de</language>
    </extension>
</addon>
